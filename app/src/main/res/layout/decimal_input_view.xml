<?xml version="1.0" encoding="utf-8"?>
<edu.usc.clicker.view.DecimalInputView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/numpad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/textColorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="2"
            android:textColor="@color/textColorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="3"
            android:textColor="@color/textColorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Display1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="4"
            android:textColor="@color/textColorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/five"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="5"
            android:textColor="@color/textColorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/six"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="6"
            android:textColor="@color/textColorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Display1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="7"
            android:textColor="@color/textColorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/eight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="8"
            android:textColor="@color/textColorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/nine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="9"
            android:textColor="@color/textColorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Display1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="."
            android:textColor="@color/textColorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/zero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/textColorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Display1" />

        <ImageView
            android:id="@+id/backspace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_backspace_24dp"
            style="@style/Base.TextAppearance.AppCompat.Display1" />

    </LinearLayout>

</edu.usc.clicker.view.DecimalInputView>